<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shq.movies.ui.activity.HistoryActivity">
    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightColor="@color/white"
        app:title="History Movies List" />
    <TextView
        android:id="@+id/find_month_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        android:textColor="@color/gray"
        android:gravity="center_horizontal"
        android:text="Only display the 15 recently viewed records" />
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/rl_favorite_movie_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnablePreviewInEditMode="false">
        <com.hjq.widget.layout.WrapRecyclerView
            android:id="@+id/rv_upcoming"
            android:layout_marginTop="5dp"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_upcominglist" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>