<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shq.movies.ui.fragment.MainFragment">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#ffc824"
        app:backButton="false"
        app:barStyle="transparent"
        app:layout_collapseMode="pin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_home_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_home_hint"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:background="@drawable/home_search_bar_bg"
                android:gravity="center"
                android:text="完善细节，追求完美"
                android:textColor="@color/white60"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_home_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/search_ic"
                app:tint="@color/gray" />

        </LinearLayout>

    </com.hjq.bar.TitleBar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />
            </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <com.hjq.widget.layout.SettingBar
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:bar_leftText="Recommendation movies"
                        app:bar_rightText="more" />
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="100dp"
                                android:layout_height="140dp">

                                <com.hjq.widget.view.ScaleImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:src="@drawable/logo_big_ic"
                                    app:scaleRatio="1.2" />

                                <ImageButton
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/click_collect"></ImageButton>
                            </FrameLayout>

                            <TextView
                                android:id="@+id/movieList1"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="TextView" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="100dp"
                                android:layout_height="140dp">

                                <com.hjq.widget.view.ScaleImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:src="@drawable/logo_big_ic"
                                    app:scaleRatio="1.2" />

                                <ImageButton
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/click_collect"></ImageButton>
                            </FrameLayout>

                            <TextView
                                android:id="@+id/movieList2"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="TextView" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="100dp"
                                android:layout_height="140dp">

                                <com.hjq.widget.view.ScaleImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:src="@drawable/logo_big_ic"
                                    app:scaleRatio="1.2" />

                                <ImageButton
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/click_collect"></ImageButton>
                            </FrameLayout>

                            <TextView
                                android:id="@+id/movieList3"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="TextView" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="100dp"
                                android:layout_height="140dp">

                                <com.hjq.widget.view.ScaleImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:src="@drawable/logo_big_ic"
                                    app:scaleRatio="1.2" />

                                <ImageButton
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/click_collect"></ImageButton>
                            </FrameLayout>

                            <TextView
                                android:id="@+id/movieList4"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="TextView" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="100dp"
                                android:layout_height="140dp">

                                <com.hjq.widget.view.ScaleImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:src="@drawable/logo_big_ic"
                                    app:scaleRatio="1.2" />

                                <ImageButton
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/click_collect"></ImageButton>
                            </FrameLayout>

                            <TextView
                                android:id="@+id/movieList5"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="TextView" />


                        </LinearLayout>
                    </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">


                        <com.hjq.widget.layout.SettingBar
                            android:id="@+id/sb_top_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:bar_leftText="Recommendation movies"
                            app:bar_rightText="more" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/hot_type_img_top"
                                android:layout_width="100dp"
                                android:layout_height="60dp"

                                app:srcCompat="@mipmap/launcher_ic" />

                            <ImageView
                                android:id="@+id/hot_type_img_bottom"
                                android:layout_width="100dp"
                                android:layout_height="60dp"

                                android:layout_marginTop="10dp"
                                app:srcCompat="@mipmap/launcher_ic" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/hot_type_img_top1"
                                android:layout_width="100dp"
                                android:layout_height="60dp"

                                app:srcCompat="@mipmap/launcher_ic" />

                            <ImageView
                                android:id="@+id/hot_type_img_bottom1"
                                android:layout_width="100dp"
                                android:layout_height="60dp"

                                android:layout_marginTop="10dp"
                                app:srcCompat="@mipmap/launcher_ic" />
                        </LinearLayout>
                    </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">

                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/sb_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:bar_leftText="Recommendation movie reviews"
                    app:bar_rightText="more" />


                <com.hjq.widget.layout.SettingBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/main_hot_moviereview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="title" />

                            <ImageView
                                android:id="@+id/hot_type_moviereview_img"
                                android:layout_width="100dp"
                                android:layout_height="60dp"

                                app:srcCompat="@mipmap/launcher_ic" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/main_hot_moviereview_author"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Author:" />

                            <ImageView
                                android:id="@+id/hot_type_img"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="5dp"
                                app:srcCompat="@drawable/home_message_selector" />

                            <TextView
                                android:id="@+id/main_hot_moviereview_comment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="3" />

                            <TextView
                                android:id="@+id/main_hot_moviereview_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Date:" />
                        </LinearLayout>

                    </LinearLayout>
                </com.hjq.widget.layout.SettingBar>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>