<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shq.movies.ui.fragment.SearchFragment">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backButton="false"
        app:title="">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_home_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="Find"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.hjq.widget.view.RegexEditText
                android:id="@+id/et_search"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:background="@drawable/find_search_bar_bg"
                android:gravity="center"
                android:hint="Search the movies..."
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_home_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/search_ic"
                app:tint="@color/gray" />

        </LinearLayout>
    </com.hjq.bar.TitleBar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/find_new_img"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    app:srcCompat="@drawable/ic_new" />

                <TextView
                    android:id="@+id/find_new_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Upcoming movie" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/find_month_img"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    app:srcCompat="@drawable/ic_month" />

                <TextView
                    android:id="@+id/find_month_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:text="This Month Movie" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/main_hot_movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:text="Popularity list"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/main_hot_movie_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end"
                android:padding="10dp"
                android:text="more"
                android:textColor="@color/black40" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/hottype_img"
                    android:layout_width="90dp"
                    android:layout_height="130dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@mipmap/launcher_ic" />

                <ImageView
                    android:id="@+id/hottypeimg2"
                    android:layout_width="90dp"
                    android:layout_height="130dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@mipmap/launcher_ic" />

                <ImageView
                    android:id="@+id/hottypeimg3"
                    android:layout_width="90dp"
                    android:layout_height="130dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@mipmap/launcher_ic" />

                <ImageView
                    android:id="@+id/hottypeimg4"
                    android:layout_width="90dp"
                    android:layout_height="130dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@mipmap/launcher_ic" />

                <ImageView
                    android:id="@+id/hottypeimg5"
                    android:layout_width="90dp"
                    android:layout_height="130dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@mipmap/launcher_ic" />

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/main_good_movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="High score list"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/main_good_movie_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end"
                android:padding="10dp"
                android:text="more"
                android:textColor="@color/black40" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="90dp"
                    android:layout_height="130dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@mipmap/launcher_ic" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="90dp"
                    android:layout_height="130dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@mipmap/launcher_ic" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="90dp"
                    android:layout_height="130dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@mipmap/launcher_ic" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="90dp"
                    android:layout_height="130dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@mipmap/launcher_ic" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="90dp"
                    android:layout_height="130dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@mipmap/launcher_ic" />

            </LinearLayout>
        </HorizontalScrollView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>